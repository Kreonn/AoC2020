{
	"name": "Go",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash",
		"go.useGoProxyToCheckForToolUpdates": false,
		"go.gopath": "/go",
		"go.useLanguageServer": true
	},
	"extensions": [
		"golang.Go"
	],
	"remoteUser": "vscode"
}